
@{

    ViewData["Title"] = "Donate";
    var error = ViewData["error"] as string;
    DonateViewModel donate = new DonateViewModel();
}

<div class = "d-flex justify-content-center align-items-center" style="height:80vh">
    <div class="card" style="width:24rem">
       
        <h3 class ="card-title text-center">Donate</h3>
         @if(!string.IsNullOrEmpty(error))
           {
            <div class = "alert alert-danger">@error</div>
           }
        <form method = "post"asp-controller = "Donate" asp-action="Index">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" asp-for="@donate.Name" class="form-control" name = "name" id ="name" required/>
            </div>
             <div class="form-group">
                <label for="email">Email</label>
                <input type="text" asp-for="@donate.Email" class="form-control" name = "email" id ="email" required/>
            </div>
             <div class="form-group">
                <label for="Amount">Amount</label>
                <input type="number" asp-for="@donate.Amount" class="form-control" name = "Amount" id ="Amount" required/>
            </div>

            <button type="submit" class="btn btn-primary btn-black" style = "width:100%">Donate</button>
        </form>
    </div>
</div>

